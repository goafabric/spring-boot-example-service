#!/bin/bash
source .env

export COMMAND=$1

function func_up {
    func_create_postgres
    func_create_application
}

function func_create_application {
    kubectl create configmap country-application-config-files --from-file=../../config/application/

    kubectl apply -f ./deployment/application/
}

function func_create_postgres {
    kubectl create configmap country-application-demodata-files --from-file=../../config/postgres/demodata/
    kubectl create configmap country-postgres-initdb --from-file=../../config/postgres/initdb/

    kubectl apply -f ./deployment/postgres/
}

function func_down {
    func_delete_application
    func_delete_postgres
}

function func_prune {
    func_down
    kubectl delete persistentvolumeclaim country-postgres-pvc
}

function func_delete_application {
    func_delete country-country-service

    kubectl delete configmap country-application-config-files

    kubectl delete configmap country-application-configmap
    kubectl delete secret country-application-secret
}

function func_delete_postgres {
    func_delete country-postgres
    kubectl delete configmap country-postgres-initdb
    kubectl delete configmap country-application-demodata-files
    kubectl delete secret country-postgres-secret
}

function func_delete {
    echo delete $1 ...
    kubectl delete services $1
    kubectl delete deployment $1
}


if [ "${COMMAND}" = "up" ]
then
    func_up
    minikube service country-country-service --url -n ${NAMESPACE}
elif [ "${COMMAND}" = "down" ]
then
    func_down
elif [ "${COMMAND}" = "prune" ]
then
    func_prune
else
    echo Doing nothing !
fi
